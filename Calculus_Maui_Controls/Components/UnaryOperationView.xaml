<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Calculus_Maui_Controls.Components.UnaryOperationView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:Calculus_Maui_Controls.Components"
    xmlns:calculus="clr-namespace:Calculus_Library.Operations.Base;assembly=Calculus_Library"
    x:DataType="calculus:UnaryOperation">
    <HorizontalStackLayout>
        <Label x:Name="prefix_label" />
        <base:CommonOperationView BindingContext="{Binding AValue}" />
        <Label x:Name="suffix_label" />
    </HorizontalStackLayout>
</ContentView>
